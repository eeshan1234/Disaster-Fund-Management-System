<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search"

    android:background="@drawable/searchbackg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/edittext"
            android:layout_marginTop="50dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:layout_below="@+id/textView3"
            android:hint="Enter payment ID to search"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
            android:id="@+id/button"
            android:layout_below="@+id/edittext"
            android:layout_marginTop="20dp"
            android:text="SEARCH"
            android:background="@drawable/searchbutton"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Payment Status"
            android:layout_below="@+id/imageView2"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textSize="30sp"
            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="170dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/location"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_below="@+id/button"
            android:layout_marginTop="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:text="It does not matter how much we donate; it matters whether the donation is meaningful. How to define meaningful? Let society and history judge." />
    </RelativeLayout>
</RelativeLayout>